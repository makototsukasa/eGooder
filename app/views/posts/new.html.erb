<div class="main posts-new">
    <div class="container">
            <div class="back-btn">
                <%= link_to("戻る", "/users/#{@user.id}") %>
            </div>
        <h1 class="form-heading">投稿する</h1>
        <div class="form">
            <div class="form-body">
                <%= form_tag("/posts/#{@post.send_id}/create") do %>
                    <% @post.errors.full_messages.each do |message| %>
                        <div class="form-error">
                            <%= message %>
                        </div>
                    <% end %>
                    <div class="form-start-msg">
                        <img class="icon post-icon" src=<%= "/user_images/#{@user.image_name}" %>>
                        <p><%= @user.name %>さんの</p>
                    </div>
                    <textarea name="content"><%= @post.content %></textarea>
                    <div class="form-end-msg">
                        <p>ところがいいね！</p>
                    </div>
                    <input type="submit" value="投稿">
                <% end %>
            </div>
        </div>
    </div>
</div>